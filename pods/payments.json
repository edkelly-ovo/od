  "solutions": [
    {
      "name": "Collection Scheduler",
      "description": "Automates the collection of scheduled payments from customers based on active mandates, such as Direct Debit."
    },
    {
      "name": "Fraud",
      "description": "Monitors financial transactions for fraudulent activity and triggers alerts or automated actions to mitigate risk"
    },
    {
      "name": "Ledger",
      "description": "Provides an immutable store for all financial transactions associated with a customer account, ensuring a complete and auditable financial record."
    },
    {
      "name": "Mandate",
      "description": "Manages customer payment mandates, such as Direct Debit, which authorise OVO to collect payments on a recurring basis."
    },
    {
      "name": "Payment",
      "description": "Manages the real-time collection of payments from customers through various digital channels, including card, digital wallets (Apple Pay, Google Pay), and Open Banking"
    },
    {
      "name": "Reconciliation",
      "description": "Performs financial reconciliation by verifying that transaction records match across internal systems and with external payment processors and banks."
    },
    {
      "name": "Refund",
      "description": "Facilitates the process of issuing refunds to customers through various digital payment methods."
    },
    {
      "name": "Transactions",
      "description": "Manages the individual transaction records that constitute the entries within the ledger, capturing details of every financial event."
    },
    {
      "name": "Wallet",
      "description": "Manages a customer's ring-fenced digital wallet, allowing for credits and debits to be applied to their account for various purposes such as rewards"
    },
    {
      "name": "Wallet Transaction",
      "description": "Records and tracks all individual credit and debit transactions within a customer's digital wallet, providing a complete financial history."
    }
  ],
